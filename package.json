{
    "name": "melonly",
    "version": "1.0.0",
    "private": true,
    "main": "storage/dist/src/main.js",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "start": "concurrently \"melon open http://localhost:3000\" \"tsc --watch\" \"nodemon storage/dist/src/dist/main --quiet\"",
        "start:dev": "concurrently \"tsc --watch\" \"nodemon storage/dist/src/dist/main --quiet\"",
        "start:prod": "node dist/main",
        "test": "jest",
        "test:cov": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "@melonly/core": "^1.0.0-alpha.5"
    },
    "devDependencies": {
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.21",
        "concurrently": "^7.0.0",
        "jest": "^27.5.1",
        "nodemon": "^2.0.15",
        "typescript": "^4.6.2"
    }
}
