{
  "name": "melonly",
  "private": true,
  "version": "1.0.0",
  "main": ".dist/main.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "tsc && concurrently \"melon open http://localhost:3000\" \"tsc --watch\" \"nodemon .dist/main --quiet\"",
    "start:dev": "tsc && concurrently \"tsc --watch\" \"nodemon .dist/main --quiet\"",
    "start:prod": "node .dist/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@melonly/core": "^1.0.0-alpha.11"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "concurrently": "^7.2.1",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "typescript": "^4.7.2"
  }
}
